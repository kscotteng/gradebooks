<p id="notice"><%= notice %></p>

<h1>Listing Gradebooks</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Assignment name</th>
      <th>Grade</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gradebooks.each do |gradebook| %>
      <tr>
        <td><%= gradebook.student_id %></td>
        <td><%= gradebook.assignment_name %></td>
        <td><%= gradebook.grade %></td>
        <td><%= gradebook.date %></td>
        <td><%= link_to 'Show', gradebook %></td>
        <td><%= link_to 'Edit', edit_gradebook_path(gradebook) %></td>
        <td><%= link_to 'Destroy', gradebook, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

